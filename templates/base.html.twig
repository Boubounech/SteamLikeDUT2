<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/app_base.css') }}">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
    {% block navi %}
        <nav>
            <div class="NavButtonBox">
                <a id="LogoButton"  href="{{ path("index") }}"><p>STeAM</p></a>
                <a class="NavButton" href="{{ path("index") }}">Accueil</a>
                <a class="NavButton" href="{{ path("allGames") }}">Bibliothèque</a>
                <a class="NavButton" href="{{ path("SearchGames") }}">Rechercher</a>
            </div>
            <div class="NavButtonBox">
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <a class="NavButton" href="{{ path('app_logout') }}">Se Déconnecter</a>
                <a class="NavButton" href="{{ path('app_profile') }}">Mon Profil</a>
                <a class="NavButton" href="{{ path('CreateGame') }}">Publier Un jeu</a>
            {% else %}
                <a class="NavButton" href="{{ path('app_login') }}">Se Connecter</a>
                <a class="NavButton" href="{{ path('app_register') }}">Créer un compte</a>
            {% endif %}
            </div>
        </nav>
    {% endblock %}
    <div class="BodyContent">
        {% block body %}{% endblock %}
    </div>
    {% block footer %}
        <footer>
        </footer>
    {% endblock %}
    </body>
</html>
