<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
            <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Spartan&display=swap">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous" />
            <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
    {% block navi %}
        <nav class="navbar navbar-light bg-light" style="height: 100px;">
            <a class="navbar-brand" href="{{ path("index") }}">
                <i style="color: #444; font-size: 2rem;" class="pb-1 fad fa-cauldron"></i>
                <p class="pl-2 d-inline font-weight-bold" style="color: #444;">Cauldron Overflow</p>
            </a>
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <a href="{{ path('app_logout') }}" class="btn btn-dark">Log out</a>
            {% else %}
                <a class="nav-link text-black-50" href="{{ path('app_login') }}">Log In</a>
                <a href="{{ path('app_register') }}" class="btn btn-dark">Sign up</a>
            {% endif %}
        </nav>
    {% endblock %}
        {% block body %}{% endblock %}
    {% block footer %}
        <footer class="mt-5 p-3 text-center">
            Made with <i style="color: red;" class="fa fa-heart"></i> by the guys and gals at <a style="color: #444; text-decoration: underline;" href="{{ path("random", {name:"bkaa"} ) }}">SymfonyCasts</a>
        </footer>
    {% endblock %}
    </body>
</html>
